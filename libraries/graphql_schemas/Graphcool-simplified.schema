type File implements Node {
  contentType: String!
  createdAt: DateTime!
  id: ID! @isUnique
  name: String!
  owner: User @relation(name: "ImageOwner")
  secret: String! @isUnique
  size: Int!
  updatedAt: DateTime!
  url: String! @isUnique
}

type Timesheet implements Node {
  createdAt: DateTime!
  id: ID! @isUnique
  rating: Int
  remark: String
  timeCode: TimesheetCode
  updatedAt: DateTime!
  workday: DateTime
  user: User @relation(name: "UserTimesheets")
}

type User implements Node {
  id: ID! @isUnique
  auth0UserId: String @isUnique
  createdAt: DateTime!
  updatedAt: DateTime!
  email: String @isUnique
  firstName: String
  lastName: String
  nickName: String
  image: File @relation(name: "ImageOwner")
  branch: Branch
  cellPhone: String
  dateOfBirth: DateTime
  department: Department
  employedDate: DateTime
  idCardNumber: String
  leaveWithPay: Int
  savingsAccountID: String
  savingsBank: String
  shift: Shift
  password: String
  vacation: Int
  role: UserRole
  timesheets: [Timesheet!]! @relation(name: "UserTimesheets")
}

enum Branch {
  BAN_KOH
  SAVE_ONE
  KHON_KHAN
}

enum Department {
  SERVER
  KITCHEN
  DISHWASHER
  DAILY
  MANAGER
  OWNER
}

enum Shift {
  MORNING
  MID
  GRAVEYARD
}

enum TimesheetCode {
  R
  OT
  H
  H1
  V
  L
  L1
  S
  S1
  A
  A1
}

enum UserRole {
  ADMIN
  STAFF
  MANAGER
}